<idea-plugin version="2" url="https://github.com/vkurdin/idea-php-lambda-folding">
  <id>ru.vkurdin.idea.php.lambdafolding</id>
  <name>PHP Lambda Folding</name>
  <version>0.2.0</version>
  <vendor email="vasiliy.kurdin@gmail.com" url="https://github.com/vkurdin">Vasiliy Kurdin</vendor>

  <description><![CDATA[
      Plugin folds one-line closures into more concise form. Closure body must consist of one return statement enclosing expression.
    ]]></description>

  <change-notes><![CDATA[
      v0.2.0: type inference for closure arguments passed to array_map, array_filter etc.

      v0.1.0: Initial release
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->
  <depends>com.jetbrains.php</depends>
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <lang.foldingBuilder language="PHP" implementationClass="ru.vkurdin.idea.php.lambdafolding.LambdaFoldingBuilder"/>
    <php.typeProvider3 implementation="ru.vkurdin.idea.php.lambdafolding.ClosureArgumentTypeProvider"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
